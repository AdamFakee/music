mixin selectDrop(propertyName, name, record)
    div(class="form-group")
        label(for=propertyName) #{name}
        select(
            name=propertyName
            id=propertyName
            class="form-control"
        )
            option(value="" disabled selected) -- Chọn chủ đề --
            each item in record
                option(value=item.id) #{item.name}

mixin selectDropEdit(propertyName, name, record, key) 
    div(class="form-group")
        label(for=propertyName) #{name}
        select(
            name=propertyName
            id=propertyName
            class="form-control"
        )
            option(value="" disabled) -- Chọn chủ đề --
            each item in record
                option(value=item.id selected=(item.id==key ? true : false)) #{item.name}