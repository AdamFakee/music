extends ../../layout/default.pug

block main
    h1(class="mb-4") #{pageTitle}


    .card.mb-3
        .card-header Danh sách
        .card-body
            .row
                .col-8
                    
                .col-4.text-right
                    a(
                    href=`/${prefixAdmin}/singer/create`
                    class="btn btn-outline-success"
                    ) + Thêm mới


            table(
                class="table table-hover table-sm"
            )
                thead
                    tr
                    th STT
                    th Hình ảnh
                    th Tiêu đề
                    //- th Ca sĩ
                    //- th Chủ đề
                    //- th Vị trí
                    th Trạng thái
                    th Hành động

                tbody
                    if(singers.length) 
                        each item, index in singers
                            tr 
                                td #{index+1}
                                td
                                    img(
                                        src=item.img
                                        alt=item.name
                                        width="80px"
                                        height="auto"
                                    )
                                td #{item.name}
                                //- td Dữ liệu ca sĩ
                                //- td Dữ liệu chủ đề
                                //- td Dữ liệu vị trí
                                td
                                    if (item.status === "active")
                                        a(
                                            href="javascript:;"
                                            class="badge badge-success"
                                        ) Hoạt động
                                    else
                                        a(
                                            href="javascript:;"
                                            class="badge badge-danger"
                                        ) Dừng hoạt động
                                td
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href=`/${prefixAdmin}/singer/detail/${item.id}`
                                    ) Chi tiết
                                    a(
                                        class="btn btn-warning btn-sm ml-1"
                                        href=`/${prefixAdmin}/singer/edit/${item.id}`
                                    ) Sửa
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete
                                        data-id=item.id
                                    ) Xóa