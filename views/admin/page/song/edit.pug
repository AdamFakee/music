extends ../../layout/default.pug

block main
    h1(class="mb-4") #{pageTitle}

    form(
        action=`/${prefixAdmin}/song/edit/${song.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value=song.title
            )
        div(class="form-group")
            label(for="topic") Chủ đề
            select(
                name="topicId"
                id="topic"
                class="form-control"
                required
            )
                option(value="" disabled) -- Chọn chủ đề --
                option(value="young_music" selected=(song.topic == 'young_music' ? true : false)) nhạc trẻ
                option(value="classic_music" selected=(song.topic == 'classic_music' ? true : false)) nhạc cổ điển 
        div(class="form-group")
            label(for="singer") Ca sĩ
            select(
                name="singerId"
                id="singer"
                class="form-control"
                required
            )
                option(value="" disabled selected) -- Chọn ca sĩ --
                option(value="tuan" selected=(song.singer == 'tuan' ? true : false)) tuấn
                option(value="tot" selected=(song.singer == 'tot' ? true : false))  tọt
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
                value=song.avatar
            )
            img(
                src=song.avatar
                class="image-preview"
                upload-image-preview
            )
        div(
            class="form-group"
            upload-audio
        )
            label(for="audio") File âm thanh
            input(
                type="file"
                class="form-control-file"
                id="audio"
                name="audio"
                accept="audio/*"
                value=song.audio
                upload-audio-input
            )
            audio(controls upload-audio-play)
                source(src=song.audio)
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                type="text"
                class="form-control"
                id="desc"
                name="description"
                rows="5"
                value=song.desc
                textarea-mce
            ) #{song.description}
        div(class="form-group")
            label(for="lyric") Lời bài hát
            textarea(
                type="text"
                class="form-control"
                id="lyric"
                name="lyric"
                rows="5"
                textarea-mce
            ) #{song.lyric}
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(song.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(song.status == "inactive" ? true : false)
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật